<div class="container mt-4">
  <h1 class="page-title">Your Contacts</h1>

  <% if @contacts.any? %>
    <div class="card bg-dark text-white mb-4">
      <div class="card-header">
        Current Contacts
      </div>
      <ul class="list-group list-group-flush">
        <% @contacts.each do |contact_record| %>
          <li class="list-group-item bg-dark d-flex justify-content-between align-items-center">
            <%= contact_record.contact.name %>
            <div>
              <%= button_to "Remove", contact_path(contact_record), method: :delete, 
                  data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm ms-2" %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <p>You have no contacts yet.</p>
  <% end %>

  <h2>Add New Contact</h2>
  <% if @potential_contacts.any? %>
    <div class="card bg-dark text-white">
      <div class="card-header">Potential Contacts</div>
      <ul class="list-group list-group-flush">
        <% @potential_contacts.each do |user| %>
          <li class="list-group-item bg-dark d-flex justify-content-between align-items-center">
            <%= user.name %>
            <%= button_to "Add as Contact", contacts_path(contact_id: user.id), method: :post, 
                class: "btn btn-secondary btn-sm" %>
          </li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <p>No potential contacts available.</p>
  <% end %>
</div>

